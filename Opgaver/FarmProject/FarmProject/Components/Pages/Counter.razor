@using FarmProject
@page "/counter"
<PageTitle>PrinterLabeler</PageTitle>

<div class="container py-5">
    <h1 class="display-4 mb-4 text-primary">Printer Info Demo</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="mb-3">Printer Details</h5>
          
            
            <button class="btn btn-success mt-3" @onclick="IncrementCount">
                <i class="bi bi-printer me-2"></i>Print Label
            </button>
            <div class="mt-3">
                <span class="badge bg-info">Labels printed: @currentCount</span>
            </div>
        </div>
    </div>
</div>

@code {
    private int currentCount = 0;

 
    private void IncrementCount()
    {
        currentCount++;
        
    }
}
